<div class="container">
	<div class="row">
		<div class="col-md-6">
			<p><%= image_tag @place.image %></p>
			<p>Название: <%= @place.name %></p>
			<p>Описание: <%= @place.desc %></p>	
			<p><%= link_to 'Назад', root_path  %></p>	

		</div>
		<div class="col-md-6">
			<h4>Корзина <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></h4>
			<% current_user.carts.where(place: @place).first_or_create.cart_items.each do |item| %> 
				<p>Описание: <%= item.dish.name %></p> 
				<p>Цена: <%= item.price %></p>
			<% end %>
		</div>
	</div>

	<div class="row">
		<% @place.dishes.each do |dish| %>
		<div class="col-sm-6 col-md-2">
			<div class="thumbnail">
				<div class="caption">
					<h3><%= dish.name %></h3>
					<p>Описание: <%= dish.desc%></p>
					<p>Цена: <%= dish.price %></p>
					<p><a href="#" class="btn btn-primary" role="button">Добавить в корзину</a></p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

